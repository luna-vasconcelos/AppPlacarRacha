<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameDetailsActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/background" />

    <TextView
        android:id="@+id/Details"
        style="@style/textViewDG"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/roundedittext"
        android:drawablePadding="@dimen/cardview_default_radius"
        android:shadowColor="@color/text_shadow"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="10"
        android:layout_marginTop="30dp"
        android:text="Detalhes - Jogo"
        android:textColor="@color/drakGreen"
        android:textSize="34sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.553"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.072"
        app:layout_constraintTop_toTopOf="@+id/imageView2" />

    <TextView
        android:id="@+id/Resultado"
        style="@style/textViewDG"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="92dp"
        android:text="Resultado"
        android:textSize="28sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView2" />

    <TextView
        android:id="@+id/team1_name"
        style="@style/textViewDG"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/roundedittext"
        android:text="Team 1"
        android:textColor="@color/greenlight"
        android:layout_marginStart="30dp"
        android:layout_marginTop="156dp"
        android:layout_marginEnd="50dp"
        android:text="Team 1"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/team2_name"
        app:layout_constraintHorizontal_bias="0.176"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Details" />

    <TextView
        android:id="@+id/team2_sets_won"
        style="@style/textViewDG"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/roundedittext"
        android:paddingTop="8dp"
        android:text="Player 1, Player 2"
        android:textColor="@color/greenlight"
        android:textSize="16sp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="44dp"
        android:text="Sets Won: 0"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/team2_games_won"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/team1_sets_won"
        style="@style/textViewDG"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="20dp"
        android:paddingTop="5dp"
        android:text="Sets vencidos: 0"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/team2_sets_won"
        app:layout_constraintHorizontal_bias="0.059"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/team1_games_won"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/team1_games_won"
        style="@style/textViewDG"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/roundedittext"
        android:paddingTop="8dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="20dp"
        android:text="Games Won: 0"
        android:textColor="@color/greenlight"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.123"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.349"
        app:layout_constraintTop_toBottomOf="@+id/team1_player2" />
  
    <TextView
        android:id="@+id/team2_games_won"
        style="@style/textViewDG"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/roundedittext"
        android:textColor="@color/greenlight"
        android:layout_marginTop="20dp"
        android:paddingTop="5dp"
        android:text="Games Won: 0"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.116"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.412"
        app:layout_constraintStart_toEndOf="@+id/team1_games_won"
        app:layout_constraintTop_toBottomOf="@+id/team2_player2" />

    <TextView
        android:id="@+id/team2_player1"
        style="@style/textViewDG"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/roundedittext"
        android:text="Team 2"
        android:textColor="@color/greenlight"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="44dp"
        android:paddingTop="5dp"
        android:text="Player 1"
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/team2_name" />

    <TextView
        android:id="@+id/team2_player2"
        style="@style/textViewDG"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/roundedittext"
        android:paddingTop="8dp"
        android:textColor="@color/greenlight"
        android:layout_marginTop="96dp"
        android:layout_marginEnd="44dp"
        android:paddingTop="5dp"
        android:text="Player 2"
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.958"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.258" />

    <TextView
        android:id="@+id/team2_games_won"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/roundedittext"
        android:paddingTop="8dp"
        android:text="Games Won: 0"
        android:textColor="@color/greenlight"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.902"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.349" />
        app:layout_constraintTop_toBottomOf="@+id/team2_name" />

    <TextView
        android:id="@+id/team2_name"
        style="@style/textViewDG"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="156dp"
        android:layout_marginEnd="44dp"
        android:text="Team 2"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Details" />

    <TextView
        android:id="@+id/player1T01"
        style="@style/textViewDG"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="68dp"
        android:layout_marginTop="52dp"
        android:paddingTop="5dp"
        android:text="Player 1"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/team2_player2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/team1_name" />

    <TextView
        android:id="@+id/team1_player2"
        style="@style/textViewDG"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/roundedittext"
        android:paddingTop="8dp"
        android:text="Sets Won: 0"
        android:textColor="@color/greenlight"
        android:textSize="16sp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="96dp"
        android:paddingTop="5dp"
        android:text="Player 2"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/team2_player2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/team1_name" />

</androidx.constraintlayout.widget.ConstraintLayout>