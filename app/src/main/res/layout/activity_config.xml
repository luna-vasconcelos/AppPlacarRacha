<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".ConfigActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/background"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <EditText
        android:id="@+id/team2"
        style="@style/editText"
        android:layout_width="202dp"
        android:layout_height="42dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/roundedittext"
        android:ems="10"
        android:hint="Time B"
        android:inputType="text"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txSeparador" />

    <EditText
        android:id="@+id/Player2TB"
        style="@style/editText"
        android:layout_width="201dp"
        android:layout_height="38dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/roundedittext"
        android:ems="10"
        android:hint="Jogador 2 - Time B"
        android:inputType="textPersonName"
        android:paddingTop="2sp"
        android:paddingBottom="2sp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Player1TB" />

    <EditText
        android:id="@+id/Player1TB"
        style="@style/editText"
        android:layout_width="200dp"
        android:layout_height="36dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/roundedittext"
        android:ems="10"
        android:hint="Jogador 1 - Time B"
        android:inputType="textPersonName"
        android:paddingTop="2sp"
        android:paddingBottom="2sp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/team2" />

    <EditText
        android:id="@+id/editTextGameName"
        style="@style/editText"
        android:layout_width="198dp"
        android:layout_height="34dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/roundedittext"
        android:ems="10"
        android:hint="Nome da partida"
        android:inputType="textPersonName"
        android:paddingTop="2sp"
        android:paddingBottom="2sp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvNomePartida" />

    <TextView
        android:id="@+id/tvNomePartida"
        style="@style/textView"
        android:layout_width="293dp"
        android:layout_height="38dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/roundedittext"
        android:freezesText="false"
        android:text="Configurações da Partida"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/almostBlack"
        android:textColorHighlight="#CDDC39"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView" />

    <TextView
        android:id="@+id/tvJogadores"
        android:layout_width="201dp"
        android:layout_height="33dp"
        android:layout_marginTop="20dp"
        android:text="Jogadores"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextGameName" />

    <EditText
        android:id="@+id/Player1T1"
        style="@style/editText"
        android:layout_width="201dp"
        android:layout_height="39dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/roundedittext"
        android:hint="Jogador 1 - Time A"
        android:inputType="textPersonName"
        android:paddingTop="2sp"
        android:paddingBottom="2sp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/team1" />

    <EditText
        android:id="@+id/Player2T1"
        style="@style/editText"
        android:layout_width="201dp"
        android:layout_height="38dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/roundedittext"
        android:ems="10"
        android:hint="Jogador 2 - Time A"
        android:inputType="textPersonName"
        android:paddingTop="2sp"
        android:paddingBottom="2sp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Player1T1" />

    <TextView
        android:id="@+id/txSeparador"
        android:layout_width="42dp"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:text="X"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Player2T1" />

    <Switch
        android:id="@+id/swTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Cronômetro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Player2TB" />

    <Button
        android:id="@+id/btInitGame"
        style="@style/Buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="40dp"
        android:onClick="openPlacar"
        android:text="Iniciar Jogo"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/swTimer" />

    <EditText
        android:id="@+id/team1"
        style="@style/editText"
        android:layout_width="202dp"
        android:layout_height="42dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/roundedittext"
        android:ems="10"
        android:hint="Time A"
        android:inputType="text"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvJogadores" />

</androidx.constraintlayout.widget.ConstraintLayout>